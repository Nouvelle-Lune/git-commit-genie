{
  "name": "git-commit-genie",
  "displayName": "%displayName%",
  "publisher": "Lune-99",
  "description": "%description%",
  "version": "3.0.3",
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "media/Genie.png",
  "categories": [
    "AI",
    "SCM Providers",
    "Linters"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "llm",
    "automation",
    "gpt",
    "claude",
    "gemini",
    "deepseek",
    "commit message",
    "git workflow",
    "source control",
    "commit message generater",
    "code review",
    "openai",
    "chatgpt",
    "conventional commits",
    "git commit",
    "scm",
    "source control",
    "productivity",
    "developer tools",
    "ai assistant",
    "commit helper",
    "git helper",
    "commit automation",
    "code quality",
    "semantic commit",
    "code analysis",
    "static analysis",
    "pre-commit",
    "commit hook",
    "version control"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "icons": {
      "genie-base": {
        "description": "Genie base icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e000"
        }
      },
      "genie-check": {
        "description": "Genie check icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e001"
        }
      },
      "genie-block": {
        "description": "Genie block icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e002"
        }
      },
      "genie-warning": {
        "description": "Genie warning icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e003"
        }
      },
      "genie-reload": {
        "description": "Genie reload icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e004"
        }
      },
      "genie-noRope": {
        "description": "Genie no rope icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e005"
        }
      },
      "genie-kill": {
        "description": "Genie kill icon",
        "default": {
          "fontPath": "./media/genie.woff",
          "fontCharacter": "\\e006"
        }
      }
    },
    "configuration": {
      "title": "Git Commit Genie",
      "properties": {
        "gitCommitGenie.autoStageAllForDiff": {
          "order": 1,
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.autoStageAllForDiff.desc%",
          "tags": [
            "experimental"
          ]
        },
        "gitCommitGenie.chain.enabled": {
          "order": 2,
          "type": "boolean",
          "default": true,
          "markdownDescription": "%config.chain.enabled.desc%",
          "tags": [
            "experimental"
          ]
        },
        "gitCommitGenie.chain.maxParallel": {
          "order": 3,
          "type": "number",
          "default": 2,
          "minimum": 1,
          "markdownDescription": "%config.chain.maxParallel.desc%"
        },
        "gitCommitGenie.llm.maxRetries": {
          "order": 4,
          "type": "number",
          "default": 2,
          "minimum": 1,
          "markdownDescription": "%config.llm.maxRetries.desc%"
        },
        "gitCommitGenie.llm.temperature": {
          "order": 5,
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 2,
          "markdownDescription": "%config.llm.temperature.desc%"
        },
        "gitCommitGenie.repositoryAnalysis.enabled": {
          "order": 6,
          "type": "boolean",
          "default": true,
          "markdownDescription": "%config.repositoryAnalysis.enabled.desc%"
        },
        "gitCommitGenie.repositoryAnalysis.excludePatterns": {
          "order": 7,
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "%config.repositoryAnalysis.excludePatterns.desc%"
        },
        "gitCommitGenie.repositoryAnalysis.updateThreshold": {
          "order": 8,
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 32,
          "markdownDescription": "%config.repositoryAnalysis.updateThreshold.desc%"
        },
        "gitCommitGenie.ui.stageNotifications.enabled": {
          "order": 12,
          "type": "boolean",
          "default": true,
          "markdownDescription": "%config.ui.stageNotifications.enabled.desc%"
        },
        "gitCommitGenie.repositoryAnalysis.MaxCount": {
          "order": 9,
          "type": "number",
          "default": -1,
          "minimum": -1,
          "markdownDescription": "%config.repositoryAnalysis.MaxCount.desc%"
        },
        "gitCommitGenie.repositoryAnalysis.model": {
          "order": 10,
          "type": "string",
          "default": "general",
          "enum": [
            "general",
            "gpt-5",
            "gpt-5.2",
            "gpt-5.2-pro",
            "gpt-5-mini",
            "gpt-5-nano",
            "deepseek-chat",
            "deepseek-reasoner",
            "claude-3-5-haiku-20241022",
            "claude-sonnet-4-20250514",
            "claude-3-7-sonnet-20250219",
            "claude-3-5-sonnet-20241022",
            "claude-3-5-sonnet-20240620",
            "claude-opus-4-1-20250805",
            "claude-opus-4-20250514",
            "claude-haiku-4-5-20251001",
            "claude-sonnet-4-5-20250929",
            "claude-opus-4-5-20251101",
            "gemini-2.5-flash",
            "gemini-2.5-flash-preview-09-2025",
            "gemini-3-flash-preview",
            "gemini-2.5-pro",
            "gemini-3-pro-preview"
          ],
          "enumDescriptions": [
            "%config.repositoryAnalysis.model.general%",
            "OpenAI",
            "OpenAI",
            "OpenAI",
            "OpenAI",
            "OpenAI",
            "DeepSeek",
            "DeepSeek",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Anthropic",
            "Gemini",
            "Gemini",
            "Gemini",
            "Gemini",
            "Gemini"
          ],
          "markdownDescription": "%config.repositoryAnalysis.model.desc%"
        },
        "gitCommitGenie.commitLanguage": {
          "order": 0,
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "en",
            "zh-CN",
            "zh-TW",
            "ja",
            "ko",
            "de",
            "fr",
            "es",
            "pt",
            "ru",
            "it"
          ],
          "enumDescriptions": [
            "%config.commitLanguage.auto%",
            "%config.commitLanguage.en%",
            "%config.commitLanguage.zhCN%",
            "%config.commitLanguage.zhTW%",
            "%config.commitLanguage.ja%",
            "%config.commitLanguage.ko%",
            "%config.commitLanguage.de%",
            "%config.commitLanguage.fr%",
            "%config.commitLanguage.es%",
            "%config.commitLanguage.pt%",
            "%config.commitLanguage.ru%",
            "%config.commitLanguage.it%"
          ],
          "markdownDescription": "%config.commitLanguage.desc%"
        },
        "gitCommitGenie.typingAnimationSpeed": {
          "order": 11,
          "type": "number",
          "default": 15,
          "minimum": -1,
          "maximum": 100,
          "markdownDescription": "%config.typingAnimationSpeed.desc%"
        },
        "gitCommitGenie.showUsageCost": {
          "order": 13,
          "type": "boolean",
          "default": true,
          "markdownDescription": "%config.showUsageCost.desc%"
        }
      }
    },
    "views": {
      "scm": [
        {
          "type": "webview",
          "id": "gitCommitGenie.panel",
          "icon": "$(genie-base)",
          "name": "Git Commit Genie"
        }
      ]
    },
    "commands": [
      {
        "command": "git-commit-genie.generateCommitMessage",
        "title": "%command.generate%",
        "icon": "$(genie-base)"
      },
      {
        "command": "git-commit-genie.cancelRepositoryAnalysis",
        "title": "%command.cancelRepositoryAnalysis%",
        "category": "%category.title%",
        "icon": "$(stop)",
        "enablement": "gitCommitGenie.repositoryAnalysisEnabled == true && gitCommitGenie.hasGitRepo == true && gitCommitGenie.analysisRunning == true"
      },
      {
        "command": "git-commit-genie.cancelGeneration",
        "title": "%command.cancel%",
        "icon": "$(debug-stop)",
        "category": "%category.title%"
      },
      {
        "command": "git-commit-genie.manageModels",
        "title": "%command.manageModels%",
        "category": "%category.title%",
        "icon": "$(gear)"
      },
      {
        "command": "git-commit-genie.toggleChainMode",
        "title": "%command.toggleChain%",
        "category": "%category.title%",
        "icon": "$(circuit-board)"
      },
      {
        "command": "git-commit-genie.selectTemplate",
        "title": "%command.selectTemplate%",
        "category": "%category.title%",
        "icon": "$(file-text)"
      },
      {
        "command": "git-commit-genie.viewRepositoryAnalysis",
        "title": "%command.viewRepositoryAnalysis%",
        "category": "%category.title%",
        "icon": "$(search)",
        "enablement": "gitCommitGenie.repositoryAnalysisEnabled == true && gitCommitGenie.hasGitRepo == true"
      },
      {
        "command": "git-commit-genie.refreshRepositoryAnalysis",
        "title": "%command.refreshRepositoryAnalysis%",
        "category": "%category.title%",
        "icon": "$(refresh)",
        "enablement": "gitCommitGenie.repositoryAnalysisEnabled == true && gitCommitGenie.hasGitRepo == true && gitCommitGenie.analysisRunning != true"
      },
      {
        "command": "git-commit-genie.clearRepositoryAnalysisCache",
        "title": "%command.clearRepositoryAnalysisCache%",
        "category": "%category.title%",
        "icon": "$(trash)",
        "enablement": "gitCommitGenie.hasGitRepo == true && gitCommitGenie.analysisRunning != true"
      },
      {
        "command": "git-commit-genie.genieMenu",
        "title": "Git Commit Genie: Menu",
        "category": "%category.title%",
        "icon": "$(menu)"
      },
      {
        "command": "git-commit-genie.showRepositoryCost",
        "title": "%command.showRepositoryCost%",
        "category": "%category.title%",
        "icon": "$(info)"
      },
      {
        "command": "git-commit-genie.resetRepositoryCost",
        "title": "%command.resetRepositoryCost%",
        "category": "%category.title%",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "git-commit-genie.generateCommitMessage",
          "when": "scmProvider == 'git' && gitCommitGenie.generating != true",
          "group": "navigation"
        },
        {
          "command": "git-commit-genie.cancelGeneration",
          "when": "scmProvider == 'git' && gitCommitGenie.generating == true",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "git-commit-genie.cancelRepositoryAnalysis",
          "when": "false"
        },
        {
          "command": "git-commit-genie.refreshRepositoryAnalysis",
          "when": "gitCommitGenie.repositoryAnalysisEnabled == true && gitCommitGenie.hasGitRepo == true && gitCommitGenie.analysisRunning != true"
        },
        {
          "command": "git-commit-genie.clearRepositoryAnalysisCache",
          "when": "gitCommitGenie.hasGitRepo == true && gitCommitGenie.analysisRunning != true"
        },
        {
          "command": "git-commit-genie.cancelRepositoryAnalysis",
          "when": "gitCommitGenie.repositoryAnalysisEnabled == true && gitCommitGenie.hasGitRepo == true && gitCommitGenie.analysisRunning == true"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.32.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sinon": "^21.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@google/genai": "^1.16.0",
    "@vscode/codicons": "^0.0.41",
    "openai": "^5.23.0",
    "react-markdown": "^10.1.0",
    "zod": "^4.1.11"
  },
  "overrides": {
    "zod": "^4.1.11"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Nouvelle-Lune/git-commit-genie.git"
  },
  "homepage": "https://github.com/Nouvelle-Lune/git-commit-genie",
  "bugs": {
    "url": "https://github.com/Nouvelle-Lune/git-commit-genie/issues"
  }
}